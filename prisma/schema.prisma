generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Menu {
  id          String @id @default(cuid())
  name        String
  description String
  price       Float
  type        String
  image       String?
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  password  String
}

model Coffee {
  id String @id @default(cuid())
  name String
  description String
  hotprice Float
  coldsmprice Float
  coldlgprice Float
  rating Float
  votes Float
  image String
  type String
}
